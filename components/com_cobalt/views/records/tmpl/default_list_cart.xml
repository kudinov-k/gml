<?xml version="1.0" encoding="utf-8"?>
<form>
	<name>Cart</name>
	<author>MintJoomla</author>
	<creationDate>Febrary 2012</creationDate>
	<copyright>Copyright (C) 2005 - 2012 MintJoomla. All rights reserved.</copyright>
	<license>Commercial (http://www.mintjoomla.com/commercial-license)</license>
	<authorEmail>support@mintjoomla.com</authorEmail>
	<authorUrl>www.mintjoomla.com</authorUrl>
	<version>8.40</version>
	<description>Template list cart</description>

	<fields name="tmpl_params">
		<fieldset name="position1" label="Position 1" description="">
 			<field name="field_id_position_1" client="list" type="meresourcesfields" key="id" size="10" multiple="true" default="Read more" label="Fields for Position 1" description="Usually image thumbnail" />
			<field name="field_label1" type="list" default="pull-left" label="Field Label">
				<option value="pull-left">Left</option>
				<option value="">Top</option>
			</field>
			<field name="field_view1" type="groupedlist" default="clearfix" label="Field View">
				<group label="Horizontal">
					<option value="pull-left">Pull left</option>
					<option value="span1">Span 1</option>
					<option value="span2">Span 2</option>
					<option value="span3">Span 3</option>
					<option value="span4">Span 4</option>
					<option value="span5">Span 5</option>
					<option value="span6">Span 6</option>
					<option value="span7">Span 7</option>
					<option value="span8">Span 8</option>
					<option value="span9">Span 9</option>
					<option value="span10">Span 10</option>
					<option value="span11">Span 11</option>
					<option value="span12">Span 12</option>
				</group>
				<group label="Vertical">
					<option value="clearfix">Clearfix</option>
				</group>
			</field>
		</fieldset>

		<fieldset name="position2" label="Position 2" description="">
			<field name="field_id_position_2" client="list" type="meresourcesfields" key="id" size="10" multiple="true" default="Read more" label="Fields for Position 2" description="" />
			<field name="field_label2" type="list" default="pull-left" label="Field Label">
				<option value="pull-left">Left</option>
				<option value="">Top</option>
			</field>
			<field name="field_view2" type="groupedlist" default="clearfix" label="Field View">
				<group label="Horizontal">
					<option value="pull-left">Pull left</option>
					<option value="span1">Span 1</option>
					<option value="span2">Span 2</option>
					<option value="span3">Span 3</option>
					<option value="span4">Span 4</option>
					<option value="span5">Span 5</option>
					<option value="span6">Span 6</option>
					<option value="span7">Span 7</option>
					<option value="span8">Span 8</option>
					<option value="span9">Span 9</option>
					<option value="span10">Span 10</option>
					<option value="span11">Span 11</option>
					<option value="span12">Span 12</option>
				</group>
				<group label="Vertical">
					<option value="clearfix">Clearfix</option>
				</group>
			</field>
		</fieldset>

		<fieldset name="other" label="Other settings" description="">
			<field name="columns" type="text" default="3" label="Columns amount" />
			<field name="prefix" type="text" default="" label="Style prefix" />
			<field name="show_cats" type="radio" class="btn-group"  default="1" label="Show categories" >
				<option value="0">CNO</option>
				<option value="1">CYES</option>
			</field>
		</fieldset>

		<fieldset name="lbls" label="Title">
            <field name="title_length" label="Number of Title Characters" type="text" size="3" default="" />
            <field name="title_end" label="Title end symbols" type="text" size="3" default="..." />
			<field name="title_align" type="list" default="pull-left" label="Title align">
				<option value="pull-left">Left</option>
				<option value="pull-right">Right</option>
				<option value="center">Center</option>
			</field>
		</fieldset>

		<fieldset name="head" label="Table Headers">
			<field name="table_header" type="radio" class="btn-group" default="1" label="Show table header">
				<option value="0">CNO</option>
				<option value="1">CYES</option>
			</field>
			<field name="first_width" type="text" size="3" default="1%" label="Width of first column" />
		</fieldset>
	</fields>
</form>
<?xml version="1.0" encoding="utf-8"?>
<form>
	<name>Calendar</name>
	<author>MintJoomla</author>
	<creationDate>April 2012</creationDate>
	<copyright>Copyright (C) 2005 - 2012 MintJoomla. All rights reserved.</copyright>
	<license>Commercial (http://www.mintjoomla.com/commercial-license)</license>
	<authorEmail>support@mintjoomla.com</authorEmail>
	<authorUrl>www.mintjoomla.com</authorUrl>
	<version>8.1</version>
	<description><![CDATA[ Calendar view of the records.]]></description>

	<fields name="tmpl_params">
		<fieldset name="general4" label="CFORMAT">
			<field name="first_day" type="list" default="1" label="First day of the week" description="">
				<option value="1">Monday</option>
				<option value="7">Sunday</option>
			</field>
			<field name="time" type="list" default="1"  label="Enable time" description="When time is enabled layout show events with precision to time.">
				<option value="0">CNO</option>
				<option value="1">CYES</option>
			</field>
		</fieldset>
	</fields>
	<fields name="tmpl_core">
		<fieldset name="general2" label="CFORMAT">
			<field name="limit" type="text" size="3" default="10" label="Items per page" description="Please make it so that all articles during 6 month could be select on one page." />
			<field name="view" type="list" default="1" label="Initial View" description="">
				<option value="1">Day</option>
				<option value="2">Week</option>
				<option value="3">Month</option>
				<option value="4">2 Months</option>
				<option value="7">3 Months</option>
				<option value="5">4 Months</option>
				<option value="6">6 Months</option>
			</field>
			<field name="first_day" type="list" default="1" label="Week First Day" description="">
				<option value="1">Monday</option>
				<option value="0">Sunday</option>
			</field>
			<field name="limit" type="text" size="3" default="10" label="Max items per day" description="Show first 10 items in popup and give link to day view with all articles" />
			<field name="hint_delay" type="text" size="4" default="1500" label="Hint Delay (ms)" description="" />

			<field name="allow_view" type="list" default="" multiple="true" size="7" label="Allow view" description="">
				<option value="day">Day</option>
				<option value="week">Week</option>
				<option value="month">Month</option>
				<option value="month2">2 Months</option>
				<option value="month3">3 Months</option>
				<option value="month4">4 Months</option>
				<option value="month6">6 Months</option>
			</field>
			<field name="show_items_by" type="radio" class="btn-group" default="ctime" size="3" label="Show records by field" description="">
				<option value="ctime">Created</option>
				<option value="datetime">Datetime</option>
			</field>
			<field name="datetime" type="meresourcesfields" filters="datetime" multiple="true" size="7" label="Datetime fields" />

			<field name="item_pagination" type="hidden" default="0" label="Hide Limit Box" description="" />
		</fieldset>
	</fields>
</form>

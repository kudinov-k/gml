<?xml version="1.0" encoding="utf-8"?>
<cobaltfield>
	<name>Booking</name>
	<group>Exclusive Form Elements</group>

	<config><fields name="params">
		<fieldset name="tmpl">
			<field type="filelist" name="template_input" filter="php$" hide_none="1" hide_default="1" directory="/components/com_cobalt/fields/text/tmpl/input" label="F_TMPLINPUT" default="default.php" />
			<field type="filelist" name="template_output_list" filter="php$" hide_none="1" hide_default="1" directory="/components/com_cobalt/fields/text/tmpl/output" label="F_TMPLLIST" default="default.php" />
			<field type="filelist" name="template_output_full" filter="php$" hide_none="1" hide_default="1" directory="/components/com_cobalt/fields/text/tmpl/output" label="F_TMPLFULL" default="default.php" />
		</fieldset>

		<fieldset name="general" label="FS_GENERAL">
			<field 	name="email" type="text" label="Email for recive orders" required="required" />

			<field 	name="unit" type="textarea" label="Базовая.ед.изм."  />
			<!-- <field 	name="times_h" type="textarea" label="Ед.времени (час)" />
			<field 	name="times_d" type="textarea" label="Ед.времени (день)" /> -->
			<field 	name="tax" type="textarea" rows="6" label="Налоги" />
			<field 	name="formula" type="textarea" rows="6" label="Формулы налогов" />

			<field 	name="cur_input" type="list" label="Валюта ввода" >
				<option value="USD">USD</option>
				<option value="RUB">RUB</option>
				<option value="EUR">EUR</option>
			</field>
			<field 	name="cur_output" type="list" label="Валюта вывода" >
				<option value="USD">USD</option>
				<option value="RUB">RUB</option>
				<option value="EUR">EUR</option>
			</field>

			<field 	name="percent" type="text" label="Операционый %" />

		</fieldset>
	</fields>

</config></cobaltfield>
